<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
			name="id" 
			type="text" 
			default="0" 
			label="JGLOBAL_FIELD_ID_LABEL" 
			required="true"
			readonly="true" 
			class="readonly" 
		/>
			

		<field 
			name="title" 
			type="text" 
			class="inputbox"
			size="40" 
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC" 
			required="true" 
		/>

		<field 
			name="alias" 
			type="text" 
			class="inputbox"
			size="40" 
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC" 
		/>

		<field 
			name="catid" 
			type="category" 
			extension="com_mediagalleries"
			label="JCATEGORY" 
			description="JFIELD_CATEGORY_DESC"
			class="inputbox">
		</field>

		<field 
			name="url" 
			type="text" 
			class="inputbox"
			size="40" 
			label="COM_MEDIAGALLERIES_FIELD_URL_LABEL"
			description="COM_MEDIAGALLERIES_FIELD_URL_DESC" 
			required="true"
		/>
		
		<field 
			name="thumb_url" 
			type="text" 
			class="inputbox"
			size="40" 
			label="COM_MEDIAGALLERIES_FIELD_THUMBURL_LABEL"
			description="COM_MEDIAGALLERIES_FIELD_THUMBURL_DESC" 
			
		/>
		
		
		<field 
			name="description" 
			type="editor" 
			buttons="true" 
			hide="pagebreak,readmore"
			class="inputbox"
			label="JGLOBAL_DESCRIPTION" 
			description="JGLOBAL_DESCRIPTION" 
		/>
		
		<field 
			name="created_by" 
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
			description="JGLOBAL_FIELD_CREATED_BY_Desc" 
		/>
		
		<field 
			name="created_by_alias" 
			type="text" 
			class="inputbox"
			size="40" 
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC" 
		/>		
		
		<field 
			name="hits" 
			type="Text" 
			class="inputbox"
			size="6" 
			label="MEDIAGALLERIES_HITS_LABEL"
			description="MEDIAGALLERIES_HITS_DESC" 
			readonly="true" 
			filter="unset" 
			default="0"
		/>


		<field
			name="state"
			type="list"
			label="JGLOBAL_STATE"
			description="JLIB_HTML_SELECT_STATE"
			class="inputbox"
			size="1"
			default="1">
				<option	value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-3">COM_WEBLINKS_FIELD_VALUE_REPORTED</option>
				<option value="-2">JTRASH</option>
		</field>
		
		<field
			name="published"
			type="list"
			label="JPUBLISHED"
			description="COM_MEDIAGALLERIES_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="1">
				<option	value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-3">COM_MEDIAGALLERIES_FIELD_VALUE_REPORTED</option>
				<option value="-2">JTRASH</option>
		</field>
		
		<field
			name="featured"
			type="list"
			label="COM_MEDIAGALLERIES_FEATURED_LABEL"
			description="COM_MEDIAGALLERIES_FEATURED_DESC"
			class="inputbox"
			size="1"
			default="0">
				<option	value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
		

		<field 
			name="ordering" 
			type="Ordering" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" 
		/>

		<field 
			name="access" 
			type="accesslevel" 
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" 
			class="inputbox" 
			size="1" 
		/>

		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_MEDIAGALLERIES_FIELD_LANGUAGE_DESC"
			class="inputbox">
				<option value="*">JALL</option>
		</field>

		
		<field 
			name="created" 
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" 
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="inputbox" 
			size="16" 
			format="%Y-%m-%d %H:%M:%S"
			filter="server_utc" 
			
		/>

		<field 
			name="modified" 
			type="hidden" 
			class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" 
			description="JGLOBAL_FIELD_MODIFIED_DESC"
			size="16" 
			readonly="true" 
			filter="unset" 
			
			
		/>

		<field 
			name="modified_by" 
			type="hidden" 
			filter="unset" 
		/>

		<field 
			name="checked_out" 
			type="hidden" 
			filter="unset" 
		/>

		<field 
			name="checked_out_time" 
			type="hidden" 
			filter="unset" 
		/>
	
		<field 
			name="publish_up" 
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL" 
			description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
			class="inputbox" 
			format="%Y-%m-%d %H:%M:%S" 
			size="30"
			filter="server_utc" 
		/>
	
		<field 
			name="publish_down" 
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL" 
			description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" 
			format="%Y-%m-%d %H:%M:%S" 
			size="30"
			filter="server_utc" 
		/>
	
		<field 
			name="metakey" 
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL" 
			description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox" 
			rows="3" 
			cols="30"
		/>


		<field 
			name="xreference" 
			type="text"
			label="JFIELD_XREFERENCE_LABEL" 
			description="JFIELD_XREFERENCE_DESC"
			class="inputbox" 
			size="20" 
		/>

		<field 
			name="robots" 
			type="list"
			label="JFIELD_METADATA_ROBOTS_LABEL" 
			description="JFIELD_METADATA_ROBOTS_DESC" >
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JGLOBAL_INDEX_FOLLOW</option>
				<option value="1">JGLOBAL_NOINDEX_FOLLOW</option>
				<option value="2">JGLOBAL_INDEX_NOFOLLOW</option>
				<option value="3">JGLOBAL_NOINDEX_NOFOLLOW</option>
				<option value="4">JGLOBAL_NO_ROBOTS_TAG</option>
		</field>
	
	<!-- to be reviewed/deleted -->
		<field 
			name="rights" 
			type="textarea" 
			label="JFIELD_META_RIGHTS_LABEL"
			description="JFIELD_META_RIGHTS_DESC" 
			required="" 
			filter="string"
			cols="30" 
			rows="2" 
		/>
	</fieldset>

	<fields name="params">
	<fieldset 	name="jbasic" 
					label="JGLOBAL_FIELDSET_OPTIONS">
		<field name="width" 
			type="text" 
			size="5" 
			label="COM_MEDIAGALLERIES_WIDTH_LABEL" 
			description="COM_MEDIAGALLERIES_WIDTH_DESC"/>
				
				
		<field name="height" 
			type="text" 
			size="5" 
			label="COM_MEDIAGALLERIES_HEIGHT_LABEL" 
			description="COM_MEDIAGALLERIES_HEIGHT_DESC"/>
				
		<field name="autostart" 
					type="radio" 
					label="COM_MEDIAGALLERIES_AUTOSTART_LABEL" 
					description="COM_MEDIAGALLERIES_AUTOSTART_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
		</fieldset>
			<fieldset name="players" label="Players">		
				<!--Media Players -->
				<field name="flv_player" 
					type="list" 
					label="COM_MEDIAGALLERIES_FLV_PLAYER_LABEL" 
					description="COM_MEDIAGALLERIES_FLV_PLAYER_DESC">
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="jwplayer">COM_MEDIAGALLERIES_FLV_PLAYER_JWPPLAYER</option>			
						<option value="2kplayer">COM_MEDIAGALLERIES_FLV_PLAYER_3K_FLV_PLAYER</option>
				
				</field>
				
				<field name="mp3_player" 
					type="list" 
					label="COM_MEDIAGALLERIES_MP3_PLAYER_LABEL" 
					description="COM_MEDIAGALLERIES_MP3_PLAYER_DESC" >
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="jwplayer">COM_MEDIAGALLERIES_MP3_PLAYER_JWPLAYER</option>			
						<option value="1pixelout">COM_MEDIAGALLERIES_MP3_PLAYER_1PIXELOUT</option>
				
				</field>
			</fieldset>
			<fieldset name="Youtube" label="Youtube">	
				<!--Youtube API-->
				<field name="@spacer" 
					type="spacer" 
					default="" 
					label="" 
					description="" />
				
				<field name="youtube_rel" 
					type="radio" 
					label="COM_MEDIAGALLERIES_YOUTUBE_RELATED_LABEL" 
					description="COM_MEDIAGALLERIES_YOUTUBE_RELATED_DESC" >
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_loop" 
					type="radio" 
					label="COM_MEDIAGALLERIES_YOUTUBE_LOOP_LABEL" 
					description="COM_MEDIAGALLERIES_YOUTUBE_LOOP_DESC" >
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_disablekb" 
					type="radio" 
					default="0" 
					label="COM_MEDIAGALLERIES_YOUTUBE_DISABLE_KEYBOARD_LABEL" 
					description="COM_MEDIAGALLERIES_YOUTUBE_DISABLE_KEYBOARD_DESC" >
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_egm" 
					type="radio" 
					default="0" 
					label="COM_MEDIAGALLERIES_YOUTUBE_ENHANCED_GENIE_MENU_LABEL" 
					description="COM_MEDIAGALLERIES_YOUTUBE_ENHANCED_GENIE_MENU_DESC">
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_border" 
				type="radio" 
				label="COM_MEDIAGALLERIES_YOUTUBE_BORDER_LABEL" 
				description="COM_MEDIAGALLERIES_YOUTUBE_BORDER_DESC">
						<option value="">JGLOBAL_USE_GLOBAL</option>
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				
				</field>
				
				<field name="youtube_color1" 
					type="text" 
					size="6" 
					default="" 
					label="COM_MEDIAGALLERIES_YOUTUBE_COLOR1_LABEL" 
					description="COM_MEDIAGALLERIES_YOUTUBE_COLOR1_DESC">
				</field>
				
				<field name="youtube_color2" 
					type="text" 
					size="6" 
					default="" 
					label="COM_MEDIAGALLERIES_YOUTUBE_COLOR2_LABEL" 
					description="COM_MEDIAGALLERIES_YOUTUBE_COLOR2_DESC">
				</field>
			</fieldset>
			
				<fieldset name="jwPlayer" label="JW Player">	
				<field name="@spacer"
				 	type="spacer" 
					default="" 
					label="" 
					description=""
				/>
				
				<field name="jw_logo" 
					type="imagelist" 
					default="" 
					label="COM_MEDIAGALLERIES_JW_LOGO_LABEL" 
					directory="images" 
					exclude="" 
					stripext="" 
					description="COM_MEDIAGALLERIES_JW_LOGO_DESC" />
				
				<field name="jw_backcolor" 
					type="text" 
					size="6" 
					default="" 
					label="COM_MEDIAGALLERIES_JW_BACKCOLOR_LABEL" 
					description="COM_MEDIAGALLERIES_JW_BACKCOLOR_DESC" />
				
				<field name="jw_frontcolor" 
					type="text" 
					size="6" 
					default="" 
					label="COM_MEDIAGALLERIES_JW_FRONTCOLOR_LABEL" 
					description="COM_MEDIAGALLERIES_JW_FRONTCOLOR_DESC"/>
				
				<field name="jw_lightcolor" 
					type="text" 
					size="6" 
					default="" 
					label="COM_MEDIAGALLERIES_JW_LIGHTCOLOR_LABEL" 
					description="COM_MEDIAGALLERIES_JW_LIGHTCOLOR_DESC"/>
				
				<field name="jw_screencolor" 
					type="text" 
					size="6" 
					default="" 
					label="COM_MEDIAGALLERIES_JW_SCREENCOLOR_LABEL" 
					description="COM_MEDIAGALLERIES_JW_SCREENCOLOR_DESC"/>
				
				<field name="jw_quality" 
					type="radio" 
					label="COM_MEDIAGALLERIES_JW_QUALITY_LABEL" 
					description="COM_MEDIAGALLERIES_JW_QUALITY_DESC">
					<option value="">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MEDIAGALLERIES_NORMAL</option>
					<option value="1">COM_MEDIAGALLERIES_HIGH</option>
				</field>
			</fieldset>	
		
	</fields>

	
</form>
