					description="Make it multilingual">
						<option value="">Use Global</option>
						<option value="1">JYES</option>			
						<option value="0">JNO</option>						
				</field>
				
				<field name="show_modified" 
					type="list" 
					default="" 
					label="Show Last Modified" 
					description="Make it multilingual">
						<option value="">Use Global</option>
						<option value="1">JYES</option>			
						<option value="0">JNO</option>						
				</field>
				
				<field name="show_modified_by" 
					type="list" 
					default="" 
