<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Default Gallery">
		<message>
			<![CDATA[COM_MEDIAGALLERIES_GALLERY_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
		>

			<field name="id" type="user"
				description="JGLOBAL_CHOOSE_CATEGORY_DESC"
				label="JGLOBAL_CHOOSE_CATEGORY_LABEL"
				required="true"	/>
		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<fieldset name="basic">
			<field name="preview_width"
					type="text"
					label="Preview Width"
					description =""
					default="512"
			/>
			<field name="preview_height"
					type="text"
					label="Preview Height"
					description =""
					default="384"
			/>
			<field name="thumb_width"
					type="text"
					label="Thumb Width"
					description =""
					default="100"
			/>
			<field name="thumb_height"
					type="text"
					label="Preview Height"
					description =""
					default="75"
			/>
			<field name="thumbs_per_row"
					type="text"
					label="Thumbs Per Row"
					description =""
					default="3"
			/>
			
		</fieldset>
		
		<fieldset name="advanced" label="Advanced">
			
				<field name="show_title" 
					type="list" 
					default="" 
					label="Show Title" 
					description="Make it multilingual">
						<option value="">Use Global</option>
						<option value="1">JYES</option>			
						<option value="0">JNO</option>						
				</field>
			
				
				
				<field name="show_url" 
					type="list" 
					default="" 
					label="Show URL" 
					description="Make it multilingual">
						<option value="">Use Global</option>
						<option value="1">JYES</option>			
						<option value="0">JNO</option>						
				</field>
				
				<field name="show_desc" 
					type="list" 
					default="" 
					label="Show Description" 
					description="Make it multilingual">
						<option value="">Use Global</option>
						<option value="1">JYES</option>			
						<option value="0">JNO</option>						
				</field>
				
				<field name="show_hits" 
					type="list" 
					default="" 
					label="Show Hits" 
					description="Make it multilingual">
						<option value="">Use Global</option>
						<option value="1">JYES</option>			
						<option value="0">JNO</option>						
				</field>
				
				<field name="show_creation" 
					type="list" 
					default="" 
					label="Show Creation time" 
					description="Make it multilingual">
